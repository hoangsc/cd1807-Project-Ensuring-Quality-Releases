				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Check data\", function () {",
							"    var json = pm.response.json();",
							"    pm.expect(json.data.id).to.eq(1);",
							"});"
						],
						"type": "text/javascript"
					}
				}
